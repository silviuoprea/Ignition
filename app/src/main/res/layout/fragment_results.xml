<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSecondary"
    tools:context=".Results">

    <Button
        android:id="@+id/saveToDB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorSecondary"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableviews"
        app:layout_constraintVertical_bias="0.50" />

    <Button
        android:id="@+id/viewDatabase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorSecondary"
        android:text="History"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableviews"
        app:layout_constraintVertical_bias="0.65"/>
    <Button
        android:id="@+id/returnToStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorSecondary"
        android:text="Start Over"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableviews"
        app:layout_constraintVertical_bias="0.8025" />

    <TableLayout
        android:id="@+id/tableviews"
        android:layout_width="340dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="6dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/fuelImage"
                android:layout_width="110dp"
                android:layout_height="80dp"
                android:src="@drawable/fuel" />

            <ImageView
                android:id="@+id/distanceImage"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:src="@drawable/distance" />

            <ImageView
                android:id="@+id/timeImage"
                android:layout_width="110dp"
                android:layout_height="80dp"
                android:src="@drawable/time" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/fuelId"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="40.22 l"
                android:gravity="center"
                android:textSize="40dp"/>

            <TextView
                android:id="@+id/distanceId"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="40dp"/>

            <TextView
                android:id="@+id/timeId"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="20.22m"
                android:gravity="center"
                android:textSize="40dp"/>
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
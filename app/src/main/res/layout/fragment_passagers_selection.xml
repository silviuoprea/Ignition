<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".PassengersSelection">


    <Button
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="172dp"
        android:textColor="@color/colorPrimary"
        android:backgroundTint ="@color/colorSecondary"
        android:shadowColor="@color/colorSecondaryVariant"
        android:text="Clear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/groupradio" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="254dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="66dp"
        android:textColor="@color/colorPrimary"
        android:backgroundTint ="@color/colorSecondary"
        android:shadowColor="@color/colorSecondaryVariant"
        android:text="Submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/groupradio" />

    <TextView
        android:id="@+id/numberofPassagers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="208dp"
        android:textColor="@color/colorSecondaryVariant"
        android:text="Select Number of Passengers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/groupradio"
        android:layout_width="103dp"
        android:layout_height="255dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="219dp"
        android:outlineAmbientShadowColor="@color/colorSecondary"
        app:layout_constraintBottom_toTopOf="@+id/clear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.283"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/Passanger1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorSecondary"
            android:minHeight="48dp"
            android:text="1" />

        <RadioButton
            android:id="@+id/Passanger2"
            android:layout_width="match_parent"
            android:textColor="@color/colorSecondary"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="2" />

        <RadioButton
            android:id="@+id/Passanger3"
            android:layout_width="match_parent"
            android:textColor="@color/colorSecondary"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="3" />

        <RadioButton
            android:id="@+id/Passanger4"
            android:layout_width="match_parent"
            android:textColor="@color/colorSecondary"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="4" />

        <RadioButton
            android:id="@+id/Passanger5"
            android:layout_width="match_parent"
            android:textColor="@color/colorSecondary"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="5" />
    </RadioGroup>

    <Switch
        android:id="@+id/WornOutTires"
        android:layout_width="169dp"
        android:layout_height="42dp"

        android:textColor="@color/colorSecondary"
        android:layout_marginTop="288dp"
        android:layout_marginEnd="36dp"
        android:minHeight="48dp"
        android:text="Worn Out Tires"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Switch
        android:id="@+id/EcoMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="192dp"
        android:textColor="@color/colorSecondary"
        android:layout_marginEnd="96dp"
        android:minHeight="48dp"
        android:text="Eco-Mode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Switch
        android:id="@+id/LowTirePressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:textColor="@color/colorSecondary"
        android:layout_marginEnd="48dp"
        android:minHeight="48dp"
        android:text="Low Tire Pressure"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Switch
        android:id="@+id/SlipperyRoad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="328dp"
        android:textColor="@color/colorSecondary"
        android:layout_marginEnd="72dp"
        android:minHeight="48dp"
        android:text="Slippery Road"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Switch
        android:id="@+id/BootFull"
        android:layout_width="141dp"
        android:layout_height="44dp"
        android:textColor="@color/colorSecondary"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="64dp"
        android:minHeight="48dp"
        android:text="Car Boot Full"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Switch
        android:id="@+id/SecondaryStorage"
        android:layout_width="wrap_content"
        android:textColor="@color/colorSecondary"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="60dp"
        android:minHeight="48dp"
        android:text="Top Storage Full"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseSwitchCompatOrMaterialXml" />
</androidx.constraintlayout.widget.ConstraintLayout>